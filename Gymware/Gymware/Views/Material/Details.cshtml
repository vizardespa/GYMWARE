@model Gymware.Models.Material

@{
    ViewBag.Title = "Details";
}

<style type="text/css">
    .colorLabel {
        color: black;
        background-color: transparent;
        text-decoration: none;
        font-weight: 600;
    }

        .colorLabel:hover {
            text-decoration: underline;
            background-color: transparent;
        }
</style>

<h2>Details</h2>

<fieldset>
    <legend>Material</legend>

    <div>
        <br />
        <span class="label">@Html.DisplayNameFor(model => model.Nombre)</span>
        <span><a class="colorLabel">@Html.DisplayFor(model => model.Nombre)</a></span>
    </div>

    <div>
        <br />
        <span class="label">@Html.DisplayNameFor(model => model.Modelo)</span>
        <span><a class="colorLabel">@Html.DisplayFor(model => model.Modelo)</a></span>
    </div>

    <div>
        <br />
        <span class="label">@Html.DisplayNameFor(model => model.Marca)</span>
        <span><a class="colorLabel">@Html.DisplayFor(model => model.Marca)</a></span>
    </div>

    <div>
        <br />
        <span class="label">Descripción:</span>
        <span><a class="colorLabel">@Html.DisplayFor(model => model.Descripcion)</a></span>
    </div>

    <div>
        <br />
        <span class="label">@Html.DisplayNameFor(model => model.Activo)</span>
        <span><a class="colorLabel">@Html.DisplayFor(model => model.Activo)</a></span>
    </div>
</fieldset>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdMaterial }) |
    @Html.ActionLink("Regresar a la lista", "Index")
</p>
