@model Gymware.Models.CompraVenta

@{
    ViewBag.Title = "Detalles Compra-Venta";
}

<style type="text/css">
    .colorLabel {
        color: black;
        background-color: transparent;
        text-decoration: none;
        font-weight: 600;
    }

        .colorLabel:hover {
            text-decoration: underline;
            background-color: transparent;
        }
</style>

<h2>Details</h2>

<fieldset>
    <legend>Compra Venta</legend>
    <div>
        <span class="label"></span>
        <span><a class="colorLabel">@Html.DisplayFor(model => model.PrecioTotal)</a></span>
    </div>

    
    <div>
        <span class="label">Fecha de Compra Venta</span>
        <span><a class="colorLabel">@Html.DisplayFor(model => model.FechaCompraVenta)</a></span>
    </div>
    
    <div>
        <span class="label">Descuento por promoción:</span>
        <span><a class="colorLabel">@Html.DisplayFor(model => model.DescuentoPromocion)</a></span>
    </div>
</fieldset>
<p>
    @Html.ActionLink("Editar", "Edit", new { id=Model.IdCompraVenta }) 
    @Html.ActionLink("Regresar a la lista", "Index")
</p>
