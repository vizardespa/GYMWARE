@model IEnumerable<Gymware.Models.CompraVenta>

@{
    ViewBag.Title = "Inicio Compra-Venta";
    WebGrid grid = new WebGrid(Model, // source
                            null, // columnNames
                            null, // defaultSort
                            10,   // rowsPerPage
                            true, // canPage
                            true, // canSort
                            null, // ajaxUpdateContainerId
                            null, // ajaxUpdateCallback
                            null, // fieldNamePrefix
                            null, // pageFieldName
                            null, // selectionFieldName
                            null, // sortFieldName
                            null);// sortDirectionFieldName
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Agregar Compra-Venta", "Create")
</p>

<form method="post">
    <div id="grid">
        Nombre:
        <input type="text" name="Nombre" value="@Request["Nombre"]" />
        Fecha Vencimiento:
        <input type="datetime" name="Fecha"  value="@Request["Fecha"]"/>
       @* Marca: 
        <select name="Marca">
            <option></option>
            @{
                foreach (var item in ViewBag.Marcas)
                {
                <option @(Request["Nombre"] == item ? " selected=\"selected\"" : "")>@item</option>
                }
            }
        </select>*@
        <input type="submit" name="btnBuscar" value="Buscar" />
    </div>

    @grid.GetHtml(
        tableStyle: "gridtable",
        headerStyle: "gridtable-header",
        alternatingRowStyle: "gridtable-alt",

        columns: new[] {
            grid.Column("IdCompraVenta", "IdCompraVenta"),
            grid.Column("PrecioTotal", "PrecioTotal"),
            grid.Column("FechaCompraVenta", "Fecha Compra-Venta"),
            grid.Column("DescuentoPromocion","Descuento Promocion"),
            grid.Column("",
                header: "Acciones",
                format: @<text>
   @* @Html.ActionLink("Editar", "Edit", new {  id=item.IdCompraVenta }) |*@
                             @Html.ActionLink("Detalles", "Details", new { id=item.IdCompraVenta }) |
                             @Html.ActionLink("Eliminar", "Delete", new { id=item.IdCompraVenta  })
    </text>
                )
        })
</form>

@section scripts
{
    <script>

        /* $(document).ready(function () {
             alert('Nice');
         });*/

        $('#btnBuscar').click(function () {
            var NombreVal = $('#Nombre').val();
            var FechaVal = $('#Fecha').val();

            $.ajax({
                url: '<%: Url.Action("Index")%>',
                data: { 'Nombre': NombreVal, 'Marca': FechaVal },
                type: "post",
                cache: false,
                success: function (savingStatus) {
                    //$("#hdnOrigComments").val($('#txtComments').val());
                    //$('#lblCommentsNotification').text(savingStatus);
                    $(document).alert('Nice');
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //$('#lblCommentsNotification').text("Error encountered while saving the comments.");
                    $(document).alert('bad');
                }
            });
        });
    </script>
}

