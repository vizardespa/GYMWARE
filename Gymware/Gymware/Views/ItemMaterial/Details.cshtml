@model Gymware.Models.ItemMaterial

@{
    ViewBag.Title = "Detalle";
}

<style type="text/css">
    .colorLabel {
        color: black;
        background-color: transparent;
        text-decoration: none;
        font-weight: 600;
    }

        .colorLabel:hover {
            text-decoration: underline;
            background-color: transparent;
        }
</style>

<h2>Detalle</h2>

<fieldset>
    <legend>Estado de Material</legend>
    <div>
        <br />
        <span class="label">Material:</span>
        <span><a class="colorLabel">@Html.DisplayFor(model => model.Material.Nombre)</a></span>
    </div>

    <div>
        <br />
        <span class="label">@Html.DisplayNameFor(model => model.Condiciones):</span>
        <span><a class="colorLabel">@Html.DisplayFor(model => model.Condiciones)</a></span>
    </div>
</fieldset>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.IdItemMaterial }) |
    @Html.ActionLink("Regresar a la lista", "Index")
</p>
